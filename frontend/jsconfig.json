{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", ".nuxt", "dist"],
  "include": [
      "**/*.js",
      "**/*.vue",
      ".eslintrc.js",
      ".eslintrc.typescript.js"
  ],
}
