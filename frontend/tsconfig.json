{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
      "core/*": [
        "../core/src*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@types/node"
    ],
    "outDir": "./ts-build"
  },
  "include": ["package.json", "*.ts"],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "references": [
    { 
      "path": "../core"
    }
  ]
}
